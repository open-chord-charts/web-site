{
  "ecmaFeatures": {
    "arrowFunctions": true,
    "defaultParams": true,
    "jsx": true,
    "objectLiteralShorthandProperties": true,
    "templateStrings": true,
  },
  "env": {
  "browser": true,
  "node": true,
  },
  "rules": {
    "global-strict": 0,
    "no-comma-dangle": 0, // removed by babel transform
    "no-use-before-define": [2, "nofunc"],
    "quotes": [2, "single", "avoid-escape"],
  }
}
